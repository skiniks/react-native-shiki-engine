{
  "name": "react-native-shiki",
  "version": "0.0.1",
  "packageManager": "yarn@4.5.3",
  "description": "Shiki syntax highlighting for React Native.",
  "author": "Ryan Skinner <hello@ryanskinner.com> (https://github.com/skiniks)",
  "license": "MIT",
  "homepage": "https://github.com/skiniks/react-native-shiki#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/skiniks/react-native-shiki.git"
  },
  "bugs": {
    "url": "https://github.com/skiniks/react-native-shiki/issues"
  },
  "keywords": [
    "android",
    "fabric",
    "ios",
    "react-native",
    "shiki",
    "syntax-highlighting",
    "textmate",
    "turbo-module"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "workspaces": [
    "example"
  ],
  "files": [
    "*.podspec",
    "android/CMakeLists.txt",
    "android/build.gradle",
    "android/gradle.properties",
    "android/src/main",
    "apple/**/*.cpp",
    "apple/**/*.h",
    "apple/**/*.m",
    "apple/**/*.mm",
    "cpp/**/*.cpp",
    "cpp/**/*.h",
    "lib/commonjs",
    "lib/module",
    "lib/typescript",
    "metro.config.js",
    "react-native.config.js",
    "src"
  ],
  "scripts": {
    "prepare": "git submodule update --init --recursive && bob build",
    "prepack": "bob build",
    "clean": "del-cli android/app android/build example/android/build example/android/app/build example/ios/build lib build",
    "pods": "cd example && yarn pods",
    "update:submodule": "git submodule update --remote --merge",
    "codegen": "npx react-native codegen",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint . && eslint .",
    "lint:fix": "oxlint . --fix && eslint . --fix",
    "lint:cpp": "scripts/clang-format.sh",
    "lint:kt": "scripts/ktlint.sh",
    "lint:all": "yarn lint:fix && yarn lint:cpp",
    "release": "release-it"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "dependencies": {
    "@shikijs/types": "^3.9.2",
    "@shikijs/vscode-textmate": "^10.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.1.0",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@react-native-community/cli": "^19.1.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/react": "^19.1.9",
    "del-cli": "^6.0.0",
    "eslint": "^9.32.0",
    "eslint-plugin-de-morgan": "^1.3.1",
    "eslint-plugin-oxlint": "^1.10.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "oxlint": "^1.10.0",
    "react": "^19.1.1",
    "react-native": "^0.80.2",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "chore(deps)",
              "section": "‚¨ÜÔ∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            },
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "perf",
              "section": "üêé Performance Improvements"
            }
          ]
        }
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNShikiSpec",
    "type": "all",
    "jsSrcsDir": "src/specs",
    "ios": {
      "componentProvider": "apple/ShikiHighlighterView"
    },
    "android": {
      "componentProvider": "android/src/main/kotlin/com/shiki/ShikiPackage.kt"
    }
  }
}
